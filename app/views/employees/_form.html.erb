<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div id="content1">
<table>
  
    <%= form.label :"Employee id" %>
    <%= form.text_field :emp_id, class: 'form-control' %>

    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>

    <%= form.label :designation %>
    <k style="color:rgb(21, 49, 94);"><%= form.select :designation, ['Project Manager','Team Leader','Team Member'], class: 'form-control'%></k>
    

    <%= form.label :"Superior id" %>
    <%= form.text_field :superior_id, class: 'form-control' %>

  
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>

  
      <%= form.label :password_confirmation, "Confirm Password" %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>

    <%= form.submit "submit", class: "btn btn-primary" %>

    </table>

<% end %>
</div>
</div>