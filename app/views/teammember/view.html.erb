 <!DOCTYPE html>
<html>
<head>
  <title>EAS</title>
</head>
<body>

<style>
a:link, a:visited
{
color:#b76c6c;
}
</style>


<center>
<h1>My performance</h1>
<div id="content1">

<table>
  
 <thead>
     
    <tr>
     <th><h3>Employee ID</h3></th>
      <th><h3>Name</h3></th>
      <th><h3>Designation</h3></th>
      <th><h3>Superior ID</h3></th>
      <th><h3>Rating(10)</h3></th>
    </tr>

  </thead>



  <tbody>
    <% @counter = 0 %>
    <% @employees.each do |employee| %>
    <% if @counter%2 == 0 %>
      <tr>
        <td class="td1"><t><%= employee.emp_id %></t></td>
        <td class="td1"><t><%= employee.name %></t></td>
        <td class="td1"><t><%= employee.designation %></t></td>
        <td class="td1"><t><%= employee.superior_id %></t></td>
        <td class="td1"><t><%= employee.curr_rating %></t></td>
      </tr>
      <% @counter = @counter + 1 %>
    <% else %>
    <tr>
        <td class="td2"><t><%= employee.emp_id %></t></td>
        <td class="td2"><t><%= employee.name %></t></td>
        <td class="td2"><t><%= employee.designation %></t></td>
        <td class="td2"><t><%= employee.superior_id %></t></td>
        <td class="td2"><t><%= employee.curr_rating %></t></td>
      </tr>
      <% @counter = @counter + 1 %>
    <% end %>
    <% end %>
  </tbody>
</table>
</center>
<br>

<%= link_to 'Back', teammember_index_path %>
</div>
</body>
</html>



